{
    "manifest_version": 3,
    "name": "Video Focus",
    "version": "1.0.1",
    "description": "Customise video playback to make it more engaging, can be useful if you struggle paying attention to videos",
    "icons":{
        "128": "icon.png",
        "48": "icon.png",
        "16": "icon.png"
    },

    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Video Focus"
    },

    "permissions": [
        "storage",
        "activeTab"
    ],

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["./dist/content-scripts/main.js"],
        "run_at": "document_end"
    },{
        "css": ["./styles/main.css", "./styles/settings.css"],
        "matches": ["<all_urls>"]
    }],

    "host_permissions": [
        "<all_urls>"
    ],

    "web_accessible_resources": [{
        "resources": ["styles/*", "dist/*"],
        "matches": ["<all_urls>"]
    }]
}